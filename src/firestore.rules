
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funções Auxiliares ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isSignedIn() && isOwner(userId) && resource != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             (request.auth.token.email == 'forgegatehub@gmail.com' ||
              request.auth.token.email == 'raf-el@live.com' ||
              exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
    }


    // --- Regras das Coleções ---

    match /games/{gameId} {
      allow read: if true;
      allow write: if true;
    }

    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }

    match /admins/{userId} {
      allow read: if true;
      allow write: if true;
    }

    match /users/{userId}/{subcollection}/{docId} {
        allow read, write: if true;
    }

    match /{path=**}/reviews/{reviewId} {
      allow read, write: if true;
    }
    
    match /admin_messages/{messageId} {
      allow read, write: if true;
    }
    
    match /usernames/{username} {
      allow read: if true;
      allow write: if true;
    }
  }
}
