
/**
 * @fileoverview Firestore Security Rules for GameSphere.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data and a role-based access control (RBAC)
 * system for game management. A new submission system isolates pending games from the public catalog.
 *
 * Roles:
 * - user: Can browse and buy games, and write reviews.
 * - dev: Can submit games and update their own submissions.
 * - admin: Can manage games (approve/reject), user roles, and all submissions.
 *
 * Data Structure & Rules:
 * - /games/{gameId}: Public read. Creation restricted to 'admin' role (via submission approval).
 * - /users/{userId}: Profiles are private. Role changes are restricted to 'admin' role or self-upgrade to 'dev'.
 * - /users/{userId}/...: Subcollections (cart, wishlist, library) are private to the user.
 * - /users/{userId}/game_submissions/{gameSubId}: Devs can create/update their own. Admins can manage all.
 * - /reviews/{reviewId}: Public read. Writes are restricted to the review owner.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Public can read all games. Any signed-in user can create. Admins can update/delete.
     * @path /games/{gameId}
     */
    match /games/{gameId} {
      allow get, list: if true;
      allow create: if true;
      allow write: if isSignedIn() && isRole('admin');
    }

    /**
     * @description Users manage their own profile. Admins can manage user roles.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isRole('admin');

      allow create: if isSignedIn() && isOwner(userId) 
                      && request.resource.data.id == userId
                      && request.resource.data.email == request.auth.token.email
                      && request.resource.data.role == 'user';

      allow update: if isSignedIn() && (
                      (isOwner(userId) && (
                        (request.resource.data.keys().hasAll(['role']) == false) || 
                        (resource.data.role == 'user' && request.resource.data.role == 'dev')
                      )) ||
                      (isRole('admin'))
                    );

      allow delete: if isSignedIn() && isExistingOwner(userId);

      /**
       * @description User can read/write their own game submissions. Admins can manage all.
       * @path /users/{userId}/game_submissions/{gameSubId}
       */
      match /game_submissions/{gameSubId} {
        allow create: if isSignedIn() && isOwner(userId);
        allow read, update: if isSignedIn() && (isOwner(userId) || isRole('admin'));
        allow delete: if isSignedIn() && isRole('admin');
      }
    }

    /**
     * @description Enforces user-ownership for shopping cart data.
     * @path /users/{userId}/shopping_cart/{cartId}
     */
    match /users/{userId}/shopping_cart/{cartId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Enforces user-ownership for wishlist data.
     * @path /users/{userId}/wishlist/{wishlistId}
     */
    match /users/{userId}/wishlist/{wishlistId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    /**
     * @description Enforces user-ownership for game library data.
     * @path /users/{userId}/library/{gameId}
     */
    match /users/{userId}/library/{gameId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update, delete: if false;
    }

    /**
     * @description Allows creating, reading, updating and deleting reviews for any signed-in user.
     * @path /reviews/{reviewId}
     */
    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && isExistingOwner(resource.data.userId);
    }
    
     /**
     * @description Admin can list game submissions across all users.
     * @path /{path=**}/game_submissions/{gameSubId}
     */
    match /{path=**}/game_submissions/{gameSubId} {
      allow list: if isSignedIn() && isRole('admin');
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
    return isSignedIn() && isOwner(userId) && resource != null;
  }

  function getUserData(userId) {
    return get(/databases/$(database)/documents/users/$(userId)).data;
  }

  function getRole(userId) {
    let userData = get(/databases/$(database)/documents/users/$(userId));
    if (userData == null) {
      return 'user';
    }
    return userData.data.role;
  }

  function isRole(role) {
    if (!isSignedIn()) {
      return false;
    }
    return getRole(request.auth.uid) == role;
  }
}
