
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Public can read approved games. Admins can read all. Signed-in users can create. Admins or the original developer can update. Admins can delete.
     * @path /games/{gameId}
     */
    match /games/{gameId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.developerId == request.auth.uid;
      allow update: if isSignedIn() && (isAdmin() || isExistingOwner(resource.data.developerId));
      allow delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Users can manage their own profile. Admins can manage all users.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow list: if isSignedIn() && isAdmin();
      
      // A user can create their own profile.
      allow create: if isSignedIn() && isOwner(userId) 
                      && request.resource.data.id == userId
                      && request.resource.data.email == request.auth.token.email;

      // An admin can update any user's profile.
      // A regular user can update their own profile.
      allow update: if isSignedIn() && (isAdmin() || isOwner(userId));

      // An admin or the user themselves can delete the profile.
      allow delete: if isSignedIn() && (isAdmin() || isOwner(userId));
    }

    /**
     * @description Manages admin role documents. Any signed-in user can check their own status. Only admins can list all or create/delete others, with a special exception for the very first admin.
     * @path /admins/{userId}
     */
    match /admins/{userId} {
      // Any signed-in user can check their OWN admin status document. This is secure.
      allow get: if isSignedIn() && isOwner(userId);
      
      // Only admins can see the list of all other admins.
      allow list: if isSignedIn() && isAdmin();

      // The VERY FIRST admin document can be created by any signed-in user.
      // Afterwards, only existing admins can add other admins.
      allow create: if isSignedIn() && 
                      (isAdmin() || !exists(/databases/$(database)/documents/admins));
                      
      // Only admins can remove other admins.
      allow delete: if isSignedIn() && isAdmin();

      // No one can update an admin document, only create or delete.
      allow update: if false;
    }

    /**
     * @description Enforces user-ownership for shopping cart data.
     * @path /users/{userId}/shopping_cart/{cartId}
     */
    match /users/{userId}/shopping_cart/{cartId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Enforces user-ownership for wishlist data.
     * @path /users/{userId}/wishlist/{wishlistId}
     */
    match /users/{userId}/wishlist/{wishlistId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    /**
     * @description Enforces user-ownership for game library data.
     * @path /users/{userId}/library/{gameId}
     */
    match /users/{userId}/library/{gameId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update, delete: if false;
    }

    /**
     * @description Allows creating, reading, updating and deleting reviews for any signed-in user.
     * @path /reviews/{reviewId}
     */
    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && isExistingOwner(resource.data.userId);
    }

    /**
     * @description Enforces user-ownership for notifications. Admins can create.
     * @path /users/{userId}/notifications/{notificationId}
     */
    match /users/{userId}/notifications/{notificationId} {
      allow get, list, update: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow delete: if false;
    }
    
    /**
     * @description Signed-in can create. Admin can manage.
     * @path /admin_messages/{messageId}
     */
    match /admin_messages/{messageId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete, list: if isSignedIn() && isAdmin();
    }
    
    /**
     * @description Public can read. Only owner can create. No updates/deletes.
     * @path /usernames/{username}
     */
    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn() 
                      && request.resource.data.userId == request.auth.uid
                      && username == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username.lower();
      allow update, delete: if false;
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
    return isSignedIn() && isOwner(userId) && resource != null;
  }
  
  // This is the main check. An admin is a user who has a document
  // with their UID in the /admins collection.
  function isAdmin() {
    return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
  }
}
