/**
 * @fileoverview Firestore Security Rules for GameSphere.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data and a role-based access control (RBAC)
 * system for game management.
 *
 * Roles:
 * - user: Can browse and buy games, and write reviews.
 * - dev: Can create and update their own games (submissions).
 * - admin: Can manage games (approve/reject) and user roles.
 *
 * Data Structure & Rules:
 * - /games/{gameId}: Public read for approved games. Creation limited to 'dev' role. Updates managed by 'dev' and 'admin' roles.
 * - /users/{userId}: Profiles are private. Role changes are restricted to 'admin' role or self-upgrade to 'dev'.
 * - /users/{userId}/...: Subcollections (cart, wishlist, library, developer_applications) are private to the user.
 * - /reviews/{reviewId}: Public read. Writes are restricted to the review owner.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Public can read approved games. Devs can create games. Admins can manage status.
     * @path /games/{gameId}
     * @allow get, list: Public can see approved games.
     * @allow create: Devs can create games, setting status to 'pending'.
     * @allow update: Devs can update their own pending games. Admins can update any game's status.
     * @allow delete: Admins can delete games.
     */
    match /games/{gameId} {
      allow get, list: if resource.data.status == 'approved' || (isSignedIn() && isRole('admin'));

      allow create: if isSignedIn()
                      && request.resource.data.developerId == request.auth.uid
                      && request.resource.data.status == 'pending';
      
      allow update: if isSignedIn() && (
                      (isRole('admin')) ||
                      (isRole('dev') && resource.data.developerId == request.auth.uid && resource.data.status != 'approved' && request.resource.data.status == resource.data.status)
                    );

      allow delete: if isSignedIn() && isRole('admin');
    }

    /**
     * @description Users manage their own profile. Admins can manage user roles.
     * @path /users/{userId}
     * @allow get: A user can read their own profile.
     * @allow list: Admins can list users.
     * @allow create: A user can create their own profile, with default 'user' role.
     * @allow update: A user can update their own data. Admins or a user upgrading to 'dev' can update roles.
     * @allow delete: A user can delete their own profile.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isRole('admin'));
      allow list: if isSignedIn() && isRole('admin');

      allow create: if isSignedIn() && isOwner(userId) 
                      && request.resource.data.id == userId
                      && request.resource.data.email == request.auth.token.email
                      && request.resource.data.role == 'user';

      allow update: if isSignedIn() && (
                      // User can update their own data, but not their role (unless upgrading to dev)
                      (isOwner(userId) && (
                        (request.resource.data.keys().hasAll(['role']) == false) || // Allow updates to any field except role
                        (resource.data.role == 'user' && request.resource.data.role == 'dev') // Allow user to upgrade to dev
                      )) ||
                      (isRole('admin')) // Admins can change anyone's role
                    );

      allow delete: if isSignedIn() && isExistingOwner(userId);

      /**
       * @description User can read/write their own application. Admins can manage them.
       * @path /users/{userId}/developer_applications/{applicationId}
       */
      match /developer_applications/{applicationId} {
        allow read, write: if isSignedIn() && (isOwner(userId) || isRole('admin'));
      }
    }

    /**
     * @description Enforces user-ownership for shopping cart data.
     * @path /users/{userId}/shopping_cart/{cartId}
     */
    match /users/{userId}/shopping_cart/{cartId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Enforces user-ownership for wishlist data.
     * @path /users/{userId}/wishlist/{wishlistId}
     */
    match /users/{userId}/wishlist/{wishlistId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    /**
     * @description Enforces user-ownership for game library data.
     * @path /users/{userId}/library/{gameId}
     */
    match /users/{userId}/library/{gameId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update, delete: if false;
    }

    /**
     * @description Allows creating, reading, updating and deleting reviews for any signed-in user.
     * @path /reviews/{reviewId}
     */
    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && isExistingOwner(resource.data.userId);
    }

    /**
     * @description Admin can list developer applications across all users.
     * @path /{path=**}/developer_applications/{applicationId}
     */
    match /{path=**}/developer_applications/{applicationId} {
      // This rule allows an admin to use collection group queries.
      allow list: if isSignedIn() && isRole('admin');
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
    return isSignedIn() && isOwner(userId) && resource != null;
  }

  function getUserData(userId) {
    return get(/databases/$(database)/documents/users/$(userId)).data;
  }

  function getRole(userId) {
    // Gracefully handle cases where the user document might not exist yet
    let userData = get(/databases/$(database)/documents/users/$(userId));
    if (userData == null) {
      return 'user'; // Default to 'user' if profile doesn't exist
    }
    return userData.data.role;
  }

  function isRole(role) {
    if (!isSignedIn()) {
      return false;
    }
    return getRole(request.auth.uid) == role;
  }
}
