
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Public can read. Signed-in users can create. Admins or the original developer can update/delete.
     * @path /games/{gameId}
     */
    match /games/{gameId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.developerId == request.auth.uid;
      allow update: if isSignedIn() && (isAdmin() || isExistingOwner(resource.data.developerId));
      allow delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Public can read. Admins can manage.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(userId);
      allow update, delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Public can read. Only owner can create.
     * @path /usernames/{username}
     */
    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn() 
                      && request.resource.data.userId == request.auth.uid
                      && username == request.resource.data.username.lower();
      allow update, delete: if false;
    }

    /**
     * @description Public can read. Owner can write.
     * @path /users/{userId}/shopping_cart/{cartId}
     */
    match /users/{userId}/shopping_cart/{cartId} {
      allow read: if true;
      allow write: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Public can read. Owner can write.
     * @path /users/{userId}/wishlist/{wishlistId}
     */
    match /users/{userId}/wishlist/{wishlistId} {
      allow read: if true;
      allow write: if isSignedIn() && isOwner(userId);
    }
    
    /**
     * @description Public can read. Owner can create.
     * @path /users/{userId}/library/{gameId}
     */
    match /users/{userId}/library/{gameId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(userId);
      allow update, delete: if false;
    }

    /**
     * @description Public can read. Owner can create/update/delete.
     * @path /reviews/{reviewId}
     */
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && isExistingOwner(resource.data.userId);
    }

    /**
     * @description Public can read. Owner can update. Admin/Owner can create.
     * @path /users/{userId}/notifications/{notificationId}
     */
    match /users/{userId}/notifications/{notificationId} {
      allow read: if true;
      allow update: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow delete: if false;
    }
    
    /**
     * @description Public can read. Signed-in can create. Admin can manage.
     * @path /admin_messages/{messageId}
     */
    match /admin_messages/{messageId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && isAdmin();
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
    return isSignedIn() && isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
  }

  function isAdmin() {
    return isSignedIn() && request.auth.token.email == 'forgegatehub@gmail.com';
  }
  
  function getUserData(userId) {
    return get(/databases/$(database)/documents/users/$(userId)).data;
  }
}
