
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funções Auxiliares ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isSignedIn() && isOwner(userId) && resource != null;
    }
    
    /**
     * @description A verificação principal de administrador.
     * Um utilizador é administrador se:
     * 1. O seu UID existir como um documento na coleção /admins.
     * 2. O campo 'role' nesse documento for igual a "Admin".
     */
    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == "Admin";
    }


    // --- Regras das Coleções ---

    /**
     * @description Público pode ler jogos aprovados. Administradores podem ler todos. Utilizadores autenticados podem criar. Administradores ou o programador original podem atualizar. Administradores podem apagar.
     * @path /games/{gameId}
     */
    match /games/{gameId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.developerId == request.auth.uid;
      allow update: if isSignedIn() && (isAdmin() || isExistingOwner(resource.data.developerId));
      allow delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Utilizadores podem gerir o seu próprio perfil. Administradores podem gerir todos os utilizadores.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow list: if isSignedIn() && isAdmin();
      
      allow create: if isSignedIn() && isOwner(userId) 
                      && request.resource.data.id == userId
                      && request.resource.data.email == request.auth.token.email;

      allow update: if isSignedIn() && (isAdmin() || isOwner(userId));

      allow delete: if isSignedIn() && (isAdmin() || isOwner(userId));
    }

    /**
     * @description Gere os documentos de função de administrador. Apenas administradores podem listar todos ou criar/apagar outros. A criação do primeiro administrador é um caso especial.
     * @path /admins/{userId}
     */
    match /admins/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isAdmin() || (isSignedIn() && !exists(/databases/$(database)/documents/admins));
      allow delete: if isAdmin();
      allow update: if false;
    }

    /**
     * @description Impõe a posse do utilizador para os dados do carrinho de compras.
     * @path /users/{userId}/shopping_cart/{cartId}
     */
    match /users/{userId}/shopping_cart/{cartId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Impõe a posse do utilizador para os dados da lista de desejos.
     * @path /users/{userId}/wishlist/{wishlistId}
     */
    match /users/{userId}/wishlist/{wishlistId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    /**
     * @description Impõe a posse do utilizador para os dados da biblioteca de jogos.
     * @path /users/{userId}/library/{gameId}
     */
    match /users/{userId}/library/{gameId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update, delete: if false;
    }

    /**
     * @description Permite criar, ler, atualizar e apagar avaliações para qualquer utilizador autenticado.
     * @path /reviews/{reviewId}
     */
    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && isExistingOwner(resource.data.userId);
    }

    /**
     * @description Impõe a posse do utilizador para as notificações. Administradores podem criar.
     * @path /users/{userId}/notifications/{notificationId}
     */
    match /users/{userId}/notifications/{notificationId} {
      allow get, list, update: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow delete: if false;
    }
    
    /**
     * @description Utilizadores autenticados podem criar. Administradores podem gerir.
     * @path /admin_messages/{messageId}
     */
    match /admin_messages/{messageId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete, list: if isSignedIn() && isAdmin();
    }
    
    /**
     * @description Público pode ler. Apenas o proprietário pode criar. Sem atualizações/apagamentos.
     * @path /usernames/{username}
     */
    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn() 
                      && request.resource.data.userId == request.auth.uid
                      && username == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username.lower();
      allow update, delete: if false;
    }
  }
}
